{
    "endpoint_name": "endpoint_name",
    "endpoint_version": "$:endpoint_version",
    "endpoint_desc": "endpoint_desc endpoint",
    "steps": [
        {
            "type": "PythonScriptStep",
            "name": "step_name",
            "script_dir": "dir_relative_to_current_dir",
            "script_name": "script_name.py",
            "allow_reuse": "true",
            "output_dir": "output_dir",
            "output_dataset_name": "output_dataset_name",
            "input_dataset": 
            {
                "name": "input_dataset_name",
                "version": "latest or version",
                "as_named_input": "text"
            },
            "runconfig": {
                "cluster": "cluster_name",
                "environment": {
                    "name": "environment_name",
                    "pip_wheel_path": "$:pip_wheel_path",
                    "requirements_path": "dir_relative_to_current_dir/requirements.txt"
                }
            }
        }
    ]
}
